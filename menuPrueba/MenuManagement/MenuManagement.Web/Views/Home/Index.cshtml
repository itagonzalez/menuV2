@{
    ViewData["Title"] = "Inicio";
    ViewData["Breadcrumb"] = "<li class='breadcrumb-item active'>Inicio</li>";
}

<div class="row">
    <div class="col-12">
        <div class="jumbotron bg-gradient text-white text-center py-5 mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 15px;">
            <div class="container">
                <h1 class="display-4 fw-bold">
                    <i class="fas fa-sitemap me-3"></i>
                    Sistema de Gestión de Menús
                </h1>
                <p class="lead mb-4">
                    Administre menús dinámicos, roles y permisos de forma fácil e intuitiva
                </p>
                <a class="btn btn-light btn-lg" href="@Url.Action("Demo", "Menu")" role="button">
                    <i class="fas fa-play me-2"></i>Ver Demo
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-bars fa-3x text-primary"></i>
                </div>
                <h5 class="card-title">Gestión de Menús</h5>
                <p class="card-text text-muted">
                    Cree y administre menús jerárquicos con múltiples niveles de profundidad
                </p>
                <a href="@Url.Action("Index", "Menu")" class="btn btn-primary">
                    <i class="fas fa-cog me-1"></i>Administrar
                </a>
            </div>
            <div class="card-footer bg-transparent border-0">
                <small class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    Menús dinámicos y configurables
                </small>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-users fa-3x text-success"></i>
                </div>
                <h5 class="card-title">Roles del Sistema</h5>
                <p class="card-text text-muted">
                    Defina y administre los diferentes roles de usuario en el sistema
                </p>
                <a href="@Url.Action("Index", "Roles")" class="btn btn-success">
                    <i class="fas fa-user-cog me-1"></i>Gestionar
                </a>
            </div>
            <div class="card-footer bg-transparent border-0">
                <small class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    Control de acceso basado en roles
                </small>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-shield-alt fa-3x text-warning"></i>
                </div>
                <h5 class="card-title">Permisos</h5>
                <p class="card-text text-muted">
                    Asigne permisos específicos de menús a cada rol del sistema
                </p>
                <a href="@Url.Action("Index", "Permissions")" class="btn btn-warning">
                    <i class="fas fa-key me-1"></i>Configurar
                </a>
            </div>
            <div class="card-footer bg-transparent border-0">
                <small class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    Matriz de permisos por rol
                </small>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-eye fa-3x text-info"></i>
                </div>
                <h5 class="card-title">Demo Interactivo</h5>
                <p class="card-text text-muted">
                    Visualice cómo se comportan los menús según el rol seleccionado
                </p>
                <a href="@Url.Action("Demo", "Menu")" class="btn btn-info">
                    <i class="fas fa-play-circle me-1"></i>Probar
                </a>
            </div>
            <div class="card-footer bg-transparent border-0">
                <small class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    Funcionalidad en tiempo real
                </small>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h5 class="mb-0">
                    <i class="fas fa-chart-line me-2"></i>
                    Estadísticas del Sistema
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <div class="p-3">
                            <i class="fas fa-sitemap fa-2x text-primary mb-2"></i>
                            <h3 class="fw-bold text-primary" id="totalMenus">-</h3>
                            <p class="text-muted mb-0">Total Menús</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3 border-start border-end">
                            <i class="fas fa-users fa-2x text-success mb-2"></i>
                            <h3 class="fw-bold text-success" id="totalRoles">-</h3>
                            <p class="text-muted mb-0">Roles Activos</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3">
                            <i class="fas fa-shield-alt fa-2x text-warning mb-2"></i>
                            <h3 class="fw-bold text-warning" id="totalPermissions">-</h3>
                            <p class="text-muted mb-0">Permisos Configurados</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Información del Sistema
                </h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-3">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        <strong>Versión:</strong> 1.0.0
                    </li>
                    <li class="mb-3">
                        <i class="fas fa-calendar text-info me-2"></i>
                        <strong>Última actualización:</strong><br>
                        <small class="text-muted">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</small>
                    </li>
                    <li class="mb-3">
                        <i class="fas fa-database text-warning me-2"></i>
                        <strong>Base de datos:</strong><br>
                        <small class="text-muted">SQL Server Express</small>
                    </li>
                    <li class="mb-0">
                        <i class="fas fa-code text-primary me-2"></i>
                        <strong>Tecnología:</strong><br>
                        <small class="text-muted">ASP.NET Core MVC</small>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-lightbulb me-2 text-warning"></i>
                    Guía de Uso Rápida
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="fw-bold text-primary">
                            <i class="fas fa-play me-1"></i>
                            Primeros Pasos
                        </h6>
                        <ol class="text-muted">
                            <li>Configure los <strong>Roles</strong> del sistema</li>
                            <li>Cree la estructura de <strong>Menús</strong></li>
                            <li>Asigne <strong>Permisos</strong> a cada rol</li>
                            <li>Pruebe el funcionamiento en el <strong>Demo</strong></li>
                        </ol>
                    </div>
                    <div class="col-md-6">
                        <h6 class="fw-bold text-success">
                            <i class="fas fa-star me-1"></i>
                            Características Principales
                        </h6>
                        <ul class="text-muted">
                            <li>Menús jerárquicos ilimitados</li>
                            <li>Control de acceso por roles</li>
                            <li>Interfaz responsive y moderna</li>
                            <li>Funcionalidad AJAX en tiempo real</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load system statistics
            loadStatistics();

            // Add entrance animations
            $('.card').addClass('fade-in');
        });

        function loadStatistics() {
            // Load total menus
            $.get('/api/stats/menus', function(data) {
                $('#totalMenus').text(data.total || 0);
            }).fail(function() {
                $('#totalMenus').text('N/A');
            });

            // Load total roles
            $.get('/api/stats/roles', function(data) {
                $('#totalRoles').text(data.total || 0);
            }).fail(function() {
                $('#totalRoles').text('N/A');
            });

            // Load total permissions
            $.get('/api/stats/permissions', function(data) {
                $('#totalPermissions').text(data.total || 0);
            }).fail(function() {
                $('#totalPermissions').text('N/A');
            });
        }
    </script>
}